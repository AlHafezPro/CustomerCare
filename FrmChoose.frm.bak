Function FillStrNo() As String
StrNo = ""
With MsflexGrid1
    For i = 1 To .Rows - 1
    .Row = i
    If .RowData(.Row) = 1 Then
        StrNo = StrNo & "-" & .TextMatrix(.Row, ColStrNo)
    End If
    Next
End With
FillStrNo = Mid(StrNo, 2)
End Function

Sub FillGrid(Rs As Recordset)
Dim VRow As Integer
With MsflexGrid1
    .Cols = 4
    .Rows = 1
    If Rs.RecordCount > 0 Then
        Rs.MoveFirst
        Do While Not Rs.EOF
            .AddItem ""
            .Col = ColChk
            VRow = .Rows - 1
            .Row = VRow
            Set .CellPicture = LoadPicture(App.Path + "\ICONS\Chkoff95.bmp")
            .RowData(VRow) = 0
            .TextMatrix(VRow, ColStrNo) = Rs!StrNo
            .TextMatrix(VRow, ColStrName) = Rs!StrName
            Rs.MoveNext
        Loop
    End If
End With
End Sub
Sub FillFormatString()
    Fs = "|Ê"
    Fs = Fs + "|<" + "ÑÞã ÇáãÓÊæÏÚ"
    Fs = Fs + "|<" + "ÅÓã ÇáãÓÊæÏÚ"
    With MsflexGrid1
        .FormatString = Fs
        SetColWidths ColStrNo
        SetColWidths ColStrName
        .ColWidth(ColChk) = 300
    End With
End Sub
Sub SetColWidths(ColNo As Integer)
    Dim i, J, s, w
    With MsflexGrid1
            s = 0
            For i = 0 To .Rows - 1
                w = TextWidth(.TextMatrix(i, ColNo))
                If w > s Then s = w
            Next i
            .ColWidth(ColNo) = s + 100
    End With
End Sub

